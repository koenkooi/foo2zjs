	    rm -f $file
	fi
	;;
    "")
	usage
	;;
    *)
	error "Don't know how to get extra stuff for printer $1"
	;;
    esac
}

if [ $# = 0 ]; then
    echo "$VERSION"
    usage
fi

for i in $*
do
    case "$1" in
    all)
	getone 1000
	getone 1005
	getone 1018
	getone 1020

	getone p1005
	getone p1006
	getone p1505

	getone 2200
	getone 2300
	# getone 2430 already done
	# getone cpwl # file doesn't exist 1/28/08

	getone 1500
	getone 2600n
	# getone 1215 # already done
	getone 1025

	getone 2530

	getone 300
	# getone 6110 already done
	getone 600

	getone 500

	getone 301
	getone c310
	getone c511
	getone c810
	getone 3200
	getone 3400
	getone 5600
	;;
    *)	
	getone $i
	;;
    esac
done
