	    ENGINE=../foomatic/foomatic-db-engine
	    PERL5LIB=$ENGINE/lib $ENGINE/foomatic-ppdfile \
		-d $driver -p $printer \
		> PPD/$printer.ppd
		# | sed -e 's/\(^\*NickName.*\)"/\1 (foo2zjs recommended)"/'
	done
